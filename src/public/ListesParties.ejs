                <input type="text" id="GameName" name="name" required="">
            </div>
            <br>
            <div>
                <label for="NomAdver">Nom de l'adversaire :</label>

                <select class="adversaire" name="adver"></select>


            </div>
            <br>
        


            <div class="button">
